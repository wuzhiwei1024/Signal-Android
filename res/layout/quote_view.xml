<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quote_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="gone"
    android:layout_margin="3dp"
    android:background="@drawable/quote_background"
    tools:visibility="visible">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/quote_bar"
            android:layout_width="@dimen/quote_corner_radius"
            android:layout_height="0dp"
            android:src="@drawable/quote_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:tint="@color/purple_400" />

        <TextView
            android:id="@+id/quote_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toStartOf="@+id/quote_attachment"
            app:layout_constraintStart_toEndOf="@+id/quote_bar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Peter Parker"
            tools:textColor="@color/purple_400" />

        <TextView
            android:id="@+id/quote_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/quote_attachment"
            app:layout_constraintStart_toEndOf="@+id/quote_bar"
            app:layout_constraintTop_toBottomOf="@+id/media_name"
            tools:text="With great power comes great responsibility."
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/media_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/quote_author"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_insert_photo_white_18dp"
            android:tint="@color/gray50"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/quote_bar"
            app:layout_constraintTop_toBottomOf="@+id/quote_author"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/media_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:paddingBottom="8dp"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/quote_attachment"
            app:layout_constraintStart_toEndOf="@+id/media_icon"
            app:layout_constraintTop_toBottomOf="@+id/quote_author"
            tools:text="Photo"
            tools:visibility="visible" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/quote_attachment"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius_bottom_right="@dimen/quote_corner_radius"
            app:riv_corner_radius_top_right="@dimen/quote_corner_radius"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/quote_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_alpha"
            android:src="@drawable/ic_close_white_18dp"
            android:tint="@color/gray70"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</merge>